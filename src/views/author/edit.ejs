<form class="row  needs-validation" action="/author/<%= author.id%>" method="post" novalidate>
  <div class="modal-content">
    <div class="search-header text-center">
      <h2 class="text-center">Update Author</h2>
    </div>
    <div class="modal-body">
      <div class="col-12">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control input-lg" id="name" name="name" required value="<%= author.name%>">
        <div class="invalid-feedback">
          Please provide author name.
        </div>
      </div>
      <div class="col-12">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" id="email" name="email" required value="<%= author.email %>">
        <div class="invalid-feedback">
          Please provide a valid email.
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <a href="/author"><button type="button" class="btn btn-secondary m-3" data-dismiss="modal"><i class="bi bi-x-circle"></i> Close</button></a>
      <button type="submit" class="btn btn-primary"><i class="bi bi-save2"></i> Update</button>
    </div>
  </div>
</form>